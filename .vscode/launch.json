  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "start"
      ],
      "port": 9229,
      "cwd": "${workspaceFolder}/server",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/server",
      "program": "${workspaceFolder}/server/",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ]
    }
  ]
}