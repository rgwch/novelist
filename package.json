{
  "name": "novelist",
  "version": "0.1.0",
  "scripts": {
    "test": "jest -c .config/jest.config.cjs",
    "dev": "svelte-kit dev",
    "build": "npm run build:tailwind && svelte-kit build",
    "build:tailwind": "postcss static/css/tailwind.css -o static/css/tailwindoutput.css",
    "preview": "svelte-kit preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --write --plugin-search-dir=. .",
    "start": "svelte-kit start",
    "i18n": "sync-i18n --files '**/i18n/*.json' --primary de --languages en fr it --space 2",
    "checkenv": "node -e 'console.log(process.env)'"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@sveltejs/adapter-node": "^1.0.0-next.29",
    "@sveltejs/kit": "next",
    "@tailwindcss/jit": "^0.1.18",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@types/jest": "^26.0.23",
    "@types/luxon": "^1.27.0",
    "@types/marked": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "adm-zip": "^0.5.5",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.2",
    "epub-gen": "^0.1.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "i18next-json-sync": "^2.3.1",
    "jest": "^27.0.4",
    "jsoneditor": "^9.5.0",
    "luxon": "^1.27.0",
    "markdown-yaml-metadata-parser": "^3.0.0",
    "nodepub": "^3.0.2",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "prettier": "~2.2.1",
    "prettier-plugin-svelte": "^2.2.0",
    "sass": "^1.35.1",
    "save-dev": "0.0.1-security",
    "simplemde": "^1.11.2",
    "split-grid": "^1.0.11",
    "stream-buffers": "^3.0.2",
    "svelte": "^3.34.0",
    "svelte-check": "^2.0.0",
    "svelte-i18n": "^3.3.9",
    "svelte-jester": "^1.7.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^2.2.2",
    "ts-jest": "^27.0.3",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0",
    "yaml": "^1.10.2"
  },
  "type": "module",
  "dependencies": {}
}
