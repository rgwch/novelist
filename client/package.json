{
  "name": "novelist-client",
  "version": "1.0.2",
  "private": true,
  "scripts": {
    "build": "rollup -c .config/rollup.config.js",
    "build:tailwind": "postcss src/tailwind.css -o public/tailwind.css",
    "clean": "rimraf public/build",
    "dev": "rollup -c .config/rollup.config.js -w",
    "start": "sirv public --port 3000 --no-clear",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "i18n": "sync-i18n --files '**/i18n/*.json' --primary de --languages en fr it --space 2",
    "test": "jest -c .config/jest.config.js",
    "storybook": "start-storybook -c .config/storybook -p 6006",
    "build-storybook": "build-storybook",
    "server:storybook": "sirv storybook-static --port 6005"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-typescript": "^7.14.5",
    "@fortawesome/fontawesome-free": "^5.15.3",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-replace": "^2.4.2",
    "@rollup/plugin-typescript": "^8.0.0",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/svelte": "^6.3.4",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/svelte": "^3.0.3",
    "@tsconfig/svelte": "^2.0.0",
    "@types/array-move": "^2.0.0",
    "@types/luxon": "^1.27.1",
    "@types/object-hash": "^2.1.1",
    "@types/simplemde": "^1.11.8",
    "autoprefixer": "^10.2.6",
    "babel-jest": "^27.0.6",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.2.7",
    "i18next-json-sync": "^2.3.1",
    "jest-svelte-events": "^1.0.5",
    "object-hash": "^2.2.0",
    "postcss": "^8.3.5",
    "postcss-cli": "^8.3.1",
    "postcss-loader": "^6.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "socket.io-client": "^4.1.2",
    "svelte": "^3.38.3",
    "svelte-check": "^2.0.0",
    "svelte-jester": "^1.7.0",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.7.4",
    "tailwindcss": "^2.2.4",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "dependencies": {
    "array-move": "^3.0.1",
    "babel-cli": "^6.26.0",
    "luxon": "^1.27.0",
    "simplemde": "^1.11.2",
    "sirv-cli": "^1.0.0",
    "svelte-i18n": "^3.3.9"
  }
