{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "public/*"
  ],
  "compilerOptions": {
    "resolveJsonModule": true,
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "baseUrl": ".",
    "paths": {
      "$lib/*": [
        "src/lib/*"
      ]
    },
    "types": [
      "jest"
    ]
  }
}